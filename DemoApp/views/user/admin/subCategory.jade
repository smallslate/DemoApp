extends /common/layout
block head
	script(src="/javascript/frameworks/angular/angular.min.js")
	script(src="/javascript/frameworks/angular/angular-resource.min.js")
	script(src="/javascript/angular/apps/subCategory.js")
	script(src="/javascript/angular/services/commonService.js")
	script(src="/javascript/frameworks/jquery/jquery.validate.min.js")
	title Create or Edit Sub Category
block content
	div(ng-app="subCategory",ng-controller="subCategoryCtrl")
		form.form-horizontal.marginTop10#createSubCategory(role="form")
			div.form-group
				label.col-lg-2.control-label Sub Category Name
				div.col-lg-10
					input.form-control(name="subCategoryName" placeholder="Enter Sub Category Name" data-ng-model="subCategoryObj.subCategoryName")
			div.form-group
				label.col-lg-2.control-label Select Category
				div.col-lg-10
					select.form-control(name="categoryId",ng-model="subCategoryObj.categoryId")		
						option(value="") ----Select---- 
						option(value="{{category.categoryId}}",ng-repeat="category in categories") {{category.categoryName}}
			div.form-group
					label.col-lg-2.control-label Sub Category Description
					div.col-lg-10
						textarea.form-control(name="subCategoryDescr",placeholder="Enter Sub Category Description",data-ng-model="subCategoryObj.subCategoryDescr")
			div.form-group
					label.col-lg-2.control-label Sub Category Image URL
					div.col-lg-10
						input.form-control(name="subCategoryImg",placeholder="850*275 Image URL",data-ng-model="subCategoryObj.subCategoryImg")
			div.form-group
				div.col-lg-offset-2.col-lg-10
					button.btn.btn-primary.margin5(ng-click="crudSubCategory('create')",ng-if="!subCategoryObj.subCategoryId") Add	
					button.btn.btn-primary.margin5(ng-click="crudSubCategory('update')",ng-if="subCategoryObj.subCategoryId") Update
					button.btn.btn-danger.margin5(ng-click="crudSubCategory('delete')",ng-if="subCategoryObj.subCategoryId") Delete
					
		div.alert.alert-danger(ng-if="subCategoryObj.error") 
			b {{subCategoryObj.error}}
		div.alert.alert-success(ng-if="subCategoryObj.success") 
			b {{subCategoryObj.success}}					

		div.row
			div.col-sm-6.col-md-2
				a(href="/user/admin/category") Create Category
			div.col-sm-6.col-md-2
				a(href="/user/admin/subCategory") Create Sub Category	
			div.col-sm-6.col-md-2
				a(href="/user/admin/editCatSubCat") View Categories
			div.col-sm-6.col-md-2
				a(href="/user/profile") My Profile