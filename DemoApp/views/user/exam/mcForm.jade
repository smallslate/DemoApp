div.form-group 
	label.col-lg-2.control-label Question
		p.showHideEditor Show Rich Editor
			input(type="checkbox",data-ng-model="examObj.questionObj.questionIsRich") 
	div.col-lg-10(ng-if="!examObj.questionObj.questionIsRich")
		textarea.form-control(name="question",id="question",data-ng-model="examObj.questionObj.question")
	div.col-lg-10(ng-if="examObj.questionObj.questionIsRich")
		textarea.form-control(ck-editor=100,name="question",id="question",data-ng-model="examObj.questionObj.question")
		
div.form-group(ng-repeat="optionObj in examObj.questionObj.questionOptions")
	label.col-lg-2.control-label Option {{$index+1}}
		p.showHideEditor Show Rich Editor 
			input(type="checkbox",data-ng-model="optionObj.isOptionRich") 
	div.col-lg-8(ng-show="!optionObj.isOptionRich")
		textarea.form-control(name="option{{$index+1}}",id="option{{$index+1}}",rows="1",data-ng-model="optionObj.optionDesc")
	div.col-lg-8(ng-show="optionObj.isOptionRich")
		textarea.form-control(name="option{{$index+1}}",id="option{{$index+1}}",rows="1",data-ng-model="optionObj.optionDesc",ck-editor=100)	
	div.col-lg-2
		label Answer
			input(type="checkbox",name="answer",value="true",id="option{{$index+1}}_",data-ng-model="optionObj.isAnswer")
		div(ng-if="$index>1")
			a(ng-click="deleteAdditionalOption($index)")
				img.img-circle.pointer(src="/img/delete.png",title="delete")
									
div.form-group(ng-if="examObj.questionObj.questionOptions.length<5")
	div.col-sm-offset-2.col-sm-10
		button.btn.btn-link.marginRight10(type="submit",ng-click="addAdditionalOption()") Add Option	
		
div.form-group
	label.col-lg-2.control-label Answer Description
		p.showHideEditor Show Rich Editor 
			input(type="checkbox",data-ng-model="examObj.questionObj.answerDescrIsRich") 
	div.col-lg-10(ng-show="!examObj.questionObj.answerDescrIsRich")
		textarea.form-control(name="answerDescr",data-ng-model="examObj.questionObj.answerDescr",rows="2")
	div.col-lg-10(ng-show="examObj.questionObj.answerDescrIsRich")
		textarea.form-control(ck-editor=200,name="answerDescr",data-ng-model="examObj.questionObj.answerDescr")			
		
div.form-group
	label.col-lg-2.control-label Difficulty Level 
	div.col-lg-10
		select.form-control(name="difficultyLevel",data-ng-model="examObj.questionObj.difficultyLevel")
			option(value="0") Easy
			option(value="1") Medium
			option(value="2") Hard			
		
		
		
		
		
		
		
		
		